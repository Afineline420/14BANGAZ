-- ONEFOURBANGAZ - SQLite DB Schema

-- USERS TABLE
CREATE TABLE IF NOT EXISTS users (
  id INTEGER PRIMARY KEY AUTOINCREMENT,
  username TEXT UNIQUE,
  password TEXT,
  balance REAL DEFAULT 0,
  bonusClaimed INTEGER DEFAULT 0,
  bonusCleared INTEGER DEFAULT 0,
  vipTier TEXT DEFAULT 'Bronze'
);

-- WITHDRAWALS TABLE
CREATE TABLE IF NOT EXISTS withdrawals (
  id INTEGER PRIMARY KEY AUTOINCREMENT,
  username TEXT,
  amount REAL,
  status TEXT DEFAULT 'Pending',
  requested_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);

-- DAILY SPINS TABLE
CREATE TABLE IF NOT EXISTS daily_spins (
  id INTEGER PRIMARY KEY AUTOINCREMENT,
  username TEXT,
  lastSpin TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);

-- DEPOSITS TABLE
CREATE TABLE IF NOT EXISTS deposits (
  id INTEGER PRIMARY KEY AUTOINCREMENT,
  username TEXT,
  amount REAL,
  deposited_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);

-- ADMINS TABLE (Optional, if not using session hardcode)
CREATE TABLE IF NOT EXISTS admins (
  id INTEGER PRIMARY KEY AUTOINCREMENT,
  username TEXT UNIQUE,
  password TEXT
);
